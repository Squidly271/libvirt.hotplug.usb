<script>


function detachUSB() {
  var vms = $("select[name=vms] option:selected").val();
  var usbs = $("select[name=usbs] option:selected").val();
  if (vms && usbs) {
    $("input[name=Status]").val('Detaching Please wait...');
    $("#detach").val('Detaching ...');
    $.get('/plugins/<?=$plugin;?>/include/SystemFan.php',{op:'detect', pwm:pwm},function(data) {
      $("input[name=Status]").val(data);
      $("#detach").val('Detach');
    });
  }
}


function attachUSB() {
  var vms = $("select[name=vms] option:selected").val();
  var usbs = $("select[name=usbs] option:selected").val();
  if (vms && usbs) {    
   	$("input[name=Status]").val('Attaching Please wait...');
    $("#attach").val('Attaching ...');
    $.get('/plugins/<?=$plugin;?>/include/SystemFan.php',{op:'pwm',pwm:pwm,fan:fan},function(data) {
      $("input[name=pwm]").val(data);
      $("#attach").val('Attach');
    });
  }
}
$(function() {
  showStatus('<?=$sName?>');
});


</script>

