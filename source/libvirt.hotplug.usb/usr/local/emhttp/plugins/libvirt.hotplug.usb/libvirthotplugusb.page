$arrValidUSBDevices = getValidUSBDevices();

function list_vms() {
  $out = array();
  exec("/usr/sbin/virsh list | awk '{if (NR!=1&&NR!=2) {print $2}}' | head -n-1",$vmlist);
  foreach ($vmlist as $vm) 
  	{
      $out[] = array('name'=>$vm);
	}
  return $out;
}

function list_usbs() 
{
  global $arrValidUSBDevices;
  $out = array();
  	if (!empty($arrValidUSBDevices)) 
  	{
  		foreach($arrValidUSBDevices as $i => $arrDev) 
   		{
   			$out[] = array('name'=>$arrDev['name'],'id'=>$arrDev['id']);
   		} 
  	}
	else 
	{
		$out[] = array('name'=>"None available");
	}
  return $out;
}
